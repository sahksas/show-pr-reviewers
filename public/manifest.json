{
  "manifest_version": 3,

  "name": "Show PR Reviewers",
  "description": "Display reviewers on GitHub PR list pages",
  "version": "1.0.0",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "css": ["content_script.css"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage"],

  "host_permissions": ["https://api.github.com/*", "https://github.com/*"],

  "options_page": "options.html"
}
